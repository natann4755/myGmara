    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ShewStudyRvFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="10"
        android:orientation="vertical" >
